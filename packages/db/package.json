{
  "name": "@ojpp/db",
  "version": "0.1.0",
  "description": "OJPP データベース — Prisma スキーマ（21モデル・10 enum）・シード・マイグレーション",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "postinstall": "prisma generate",
    "generate": "dotenv -e ../../.env -- prisma generate",
    "push": "dotenv -e ../../.env -- prisma db push",
    "migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "reset": "dotenv -e ../../.env -- prisma migrate reset --force",
    "studio": "dotenv -e ../../.env -- prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0"
  },
  "devDependencies": {
    "dotenv-cli": "catalog:",
    "prisma": "^6.14.0",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
